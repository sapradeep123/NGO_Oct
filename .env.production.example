# Production Environment Configuration
# Copy this file to .env and update with your production values

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=prod
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Replace with your Contabo PostgreSQL credentials
# Format: postgresql://username:password@host:port/database
# Note: URL-encode special characters in password (@ becomes %40, # becomes %23, etc.)
DATABASE_URL=postgresql://ngo_user:YOUR_SECURE_PASSWORD@localhost:5432/ngo_db

# ============================================
# SECURITY
# ============================================
# Generate a strong random key: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Add your domain(s) - comma separated, no spaces
# Example: https://yourapp.com,https://www.yourapp.com
ALLOWED_ORIGINS=https://your-domain.com

# ============================================
# EXTERNAL URLs
# ============================================
# Your API base URL (where backend is hosted)
EXTERNAL_BASE_URL=https://api.your-domain.com

# ============================================
# S3/MinIO CONFIGURATION (Optional - for file uploads)
# ============================================
# If using AWS S3
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=your-ngo-app-bucket
S3_ACCESS_KEY=YOUR_AWS_ACCESS_KEY
S3_SECRET_KEY=YOUR_AWS_SECRET_KEY

# ============================================
# PAYMENT PROVIDER (Razorpay)
# ============================================
PAYMENT_PROVIDER=razorpay
RAZORPAY_KEY_ID=YOUR_RAZORPAY_KEY_ID
RAZORPAY_KEY_SECRET=YOUR_RAZORPAY_KEY_SECRET
